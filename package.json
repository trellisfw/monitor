    "isomorphic-timers-promises": "^1.0.1",
    "minimist": "^1.2.8",
    "nock": "^13.5.6",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "resolutions": {
    "cross-spawn": "^7.0.5",
